package Collections;

import java.util.Arrays;
import java.util.Comparator;

public class ArraysSort {

	public static void main(String[] args) {

		int a[]={40, 10, 5, 6};
		for(int i:a)
			System.out.println(i);
	
		Arrays.sort(a);
		for(int i:a)
			System.out.println(i);
		
		Comparator<Integer> c=(i1,i2)->{if (i1>i2) return 1; else if(i2>i1) return -1; else return 0};
		Arrays.sort(a, c);
	
	}

}
