
public class min_max_2d {
	
	public static void main(String v[])
	{
		int abc[][]={{8,9,7},{5,6,4},{40,9,1}};
		int row, column;
		int min=abc[0][0];
		for(int i=0;i<3;i++)
		{
			for(int j=0;j<3;j++)
			{
				if(min>abc[i][j])
				{
					min=abc[i][j];
					row=i;
					column=j;
				}
			}
		}
		
		System.out.println("Minimum in given array is +"+abc[i][j]+" and it appears at"+i+ "th row and "+j+" th column ");
	}

}
