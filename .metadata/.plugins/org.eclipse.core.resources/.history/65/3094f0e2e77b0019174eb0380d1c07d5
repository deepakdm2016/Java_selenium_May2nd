package jsonfromDBResult;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;

public class fetchResults {

	public static void main(String[] args) throws SQLException {
		// TODO Auto-generated method stub
		
		Connection con=DriverManager.getConnection("jdbc:mysql://localhoset:3308/Business", "hbstudent","hbstudent");
		Statement s=con.createStatement();
		ResultSet rs = s.executeQuery("select * from CustomerInfo where purchasedDate=CURDATE() and Location ='Asia';");
		while(rs.next())
		{
			rs.getString("CourseName");
			rs.getString("Location");
			rs.getInt("Amount");
			rs.getDate("PurchasedDate");
			
		}
	}

}
